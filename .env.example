# OpenAI Configuration
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/carvuk_db

# Redis Cache Configuration
REDIS_URL=redis://localhost:6379
REDIS_CACHE_TTL=3600 # 1 hour in seconds

# AutoPress/Autofact API Configuration
AUTOPRESS_API_URL=https://api.autopress.cl/v1
AUTOPRESS_API_KEY=your-api-key-here
AUTOPRESS_API_SECRET=your-api-secret-here

# Scraping Configuration
SCRAPER_USER_AGENT="Mozilla/5.0 (compatible; CarvukBot/1.0)"
SCRAPER_MAX_CONCURRENT=3
SCRAPER_CACHE_TTL=3600

# Analytics (optional)
MIXPANEL_TOKEN=your-mixpanel-token
GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Email Service (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Feature Flags
ENABLE_AI_RECOMMENDATIONS=true
ENABLE_SCRAPING=true
ENABLE_ANALYTICS=false

# API Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# Environment
NODE_ENV=development
NEXT_PUBLIC_API_URL=http://localhost:3000/api